[Unit]
Description=qcluster daemon
After=network.target

[Service]
User=gunicorn
Group=www-data
WorkingDirectory={{ django_dir }}
ExecStart={{ repo_dir }}/.venv/bin/python3 manage.py qcluster
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target