upstream app-server {
    # connect to this socket
    server unix:///run/gunicorn.sock;    # for a file socket
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location / {
        include proxy_params;
        proxy_pass http://app-server;
    }

    location /static/ {
        root {{ static_dir }};
        try_files $uri $uri/;
    }
}

