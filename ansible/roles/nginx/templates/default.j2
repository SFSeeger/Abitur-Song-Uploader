upstream app-server {
    server unix:/run/gunicorn.sock;    # for a file socket
}

server {
    listen 8080;
    listen [::]:8080;

    location /stub_status {
        stub_status;
    }
}

server {
    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl; # managed by Certbot
    server_name intern.rgabi.de sfseeger.ddns.net;

    ssl_certificate /etc/letsencrypt/live/intern.rgabi.de/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/intern.rgabi.de/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    client_max_body_size 10M;

    ## Deny illegal Host headers
    if ($host !~* ^(intern.rgabi.de|sfseeger.ddns.net)$ ) {
        return 444;
    }

    location /static {
        alias {{ static_dir }}/;
        autoindex on;
        autoindex_exact_size off;
        autoindex_format html;
        autoindex_localtime on;
    }

    location / {
        include proxy_params;
        proxy_pass http://app-server;
    }

}

server {
    if ($host = intern.rgabi.de) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    listen [::]:80;
    server_name intern.rgabi.de;
    return 404; # managed by Certbot
}

server {
    if ($host = sfseeger.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    listen [::]:80;
    server_name sfseeger.ddns.net;
    return 404; # managed by Certbot
}
